generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Wallet-Service
model KycProfile {
  id                 String    @id @default(uuid()) @db.Uuid
  userId             String    @unique @map("user_id") @db.Uuid
  idNumber           String    @unique @map("id_number") @db.VarChar(20)
  idType             IdType    @map("id_type")
  idFrontImageUrl    String?   @map("id_front_image_url") @db.Text
  idBackImageUrl     String?   @map("id_back_image_url") @db.Text
  selfieImageUrl     String?   @map("selfie_image_url") @db.Text
  verificationStatus KycStatus @default(PENDING) @map("verification_status")
  verifiedAt         DateTime? @map("verified_at")
  verifiedBy         String?   @map("verified_by") @db.VarChar(100)
  rejectionReason    String?   @map("rejection_reason") @db.Text
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  // Relations
  walletRequests WalletCreationRequest[]

  @@index([userId])
  @@index([verificationStatus])
  @@map("kyc_profiles")
}

model WalletCreationRequest {
  id              String        @id @default(uuid()) @db.Uuid
  userId          String        @map("user_id") @db.Uuid
  kycId           String        @map("kyc_id") @db.Uuid
  requestStatus   RequestStatus @default(PENDING) @map("request_status")
  walletType      WalletType    @default(PERSONAL) @map("wallet_type")
  rejectionReason String?       @map("rejection_reason") @db.Text
  processedAt     DateTime?     @map("processed_at")
  createdAt       DateTime      @default(now()) @map("created_at")

  // Relations
  kyc KycProfile @relation(fields: [kycId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([requestStatus])
  @@map("wallet_creation_requests")
}

model Wallet {
  id           String       @id @default(uuid()) @db.Uuid
  userId       String       @unique @map("user_id") @db.Uuid
  pinCode      String       @map("pin_code")
  walletNumber String       @unique @map("wallet_number") @db.VarChar(50)
  walletType   WalletType   @default(PERSONAL) @map("wallet_type")
  currency     String       @default("VND") @db.VarChar(3)
  balance      BigInt       @default(0) @map("balance")
  status       WalletStatus @default(PENDING)
  dailyLimit   BigInt?      @default(50000000) @map("daily_limit")
  monthlyLimit BigInt?      @default(500000000) @map("monthly_limit")
  activatedAt  DateTime?    @map("activated_at")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  version      Int          @default(0)

  transactions        Transaction[]
  relatedTransactions Transaction[]       @relation("RelatedWallet")
  ledgerEntries       LedgerEntry[]
  bankAccounts        LinkedBankAccount[]
  invoices            Invoice[]

  @@index([userId])
  @@index([status])
  @@index([walletNumber])
  @@map("wallets")
}

// Transaction-Service
model Transaction {
  id              String            @id @default(uuid()) @db.Uuid
  transactionRef  String            @unique @default(uuid()) @map("transaction_ref") @db.VarChar(100)
  walletId        String            @map("wallet_id") @db.Uuid
  relatedWalletId String?           @map("related_wallet_id") @db.Uuid
  transactionType TransactionType   @map("transaction_type")
  amountBigint    BigInt            @map("amount_bigint")
  currency        String            @default("VND") @db.VarChar(3)
  status          TransactionStatus @default(PENDING)
  description     String?           @db.Text
  metadata        Json? // Store merchant_id, order_id, etc.
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  completedAt     DateTime?         @map("completed_at")

  // Relations
  wallet          Wallet           @relation(fields: [walletId], references: [id], onDelete: Cascade)
  relatedWallet   Wallet?          @relation("RelatedWallet", fields: [relatedWalletId], references: [id], onDelete: SetNull)
  ledgerEntries   LedgerEntry[]
  idempotencyKey  IdempotencyKey?
  externalPayment ExternalPayment?
  invoice         Invoice?

  @@index([walletId])
  @@index([relatedWalletId])
  @@index([status])
  @@index([transactionType])
  @@index([createdAt])
  @@index([transactionRef])
  @@map("transactions")
}

model LedgerEntry {
  id                  String    @id @default(uuid()) @db.Uuid
  transactionId       String    @map("transaction_id") @db.Uuid
  walletId            String?   @map("wallet_id") @db.Uuid
  entryType           EntryType @map("entry_type")
  amountBigint        BigInt    @map("amount_bigint")
  currency            String    @default("VND") @db.VarChar(3)
  balanceBeforeBigint BigInt?   @map("balance_before_bigint")
  balanceAfterBigint  BigInt?   @map("balance_after_bigint")
  description         String?   @db.Text
  createdAt           DateTime  @default(now()) @map("created_at")

  // Relations
  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  wallet      Wallet?     @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([transactionId])
  @@index([walletId])
  @@index([entryType])
  @@index([createdAt])
  @@map("ledger_entries")
}

model IdempotencyKey {
  idempotencyKey String            @id @map("idempotency_key") @db.VarChar(100)
  transactionId  String?           @unique @map("transaction_id") @db.Uuid
  requestHash    String            @map("request_hash") @db.VarChar(64)
  responseData   Json?             @map("response_data")
  status         IdempotencyStatus
  expiresAt      DateTime          @map("expires_at")
  createdAt      DateTime          @default(now()) @map("created_at")

  // Relations
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([transactionId])
  @@index([status])
  @@index([expiresAt])
  @@map("idempotency_keys")
}

model LinkedBankAccount {
  id                 String           @id @default(uuid()) @db.Uuid
  userId             String           @map("user_id") @db.Uuid
  walletId           String           @map("wallet_id") @db.Uuid
  bankCode           String           @map("bank_code") @db.VarChar(20)
  accountNumber      String           @map("account_number") @db.VarChar(50)
  accountHolderName  String           @map("account_holder_name") @db.VarChar(255)
  verificationStatus BankVerifyStatus @default(PENDING) @map("verification_status")
  isPrimary          Boolean          @default(false) @map("is_primary")
  verifiedAt         DateTime?        @map("verified_at")
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")

  // Relations
  wallet           Wallet            @relation(fields: [walletId], references: [id], onDelete: Cascade)
  externalPayments ExternalPayment[]

  @@index([userId])
  @@index([walletId])
  @@index([verificationStatus])
  @@map("linked_bank_accounts")
}

// Topup-Service
model ExternalPayment {
  id                    String            @id @default(uuid()) @db.Uuid
  transactionId         String            @unique @map("transaction_id") @db.Uuid
  bankAccountId         String?           @map("bank_account_id") @db.Uuid
  provider              String            @db.VarChar(50)
  providerTransactionId String?           @map("provider_transaction_id") @db.VarChar(100)
  paymentMethod         PaymentMethod     @map("payment_method")
  amountBigint          BigInt            @map("amount_bigint")
  currency              String            @default("VND") @db.VarChar(3)
  status                TransactionStatus @default(PENDING)
  callbackData          Json?             @map("callback_data")
  createdAt             DateTime          @default(now()) @map("created_at")
  updatedAt             DateTime          @updatedAt @map("updated_at")

  // Relations
  transaction Transaction        @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  bankAccount LinkedBankAccount? @relation(fields: [bankAccountId], references: [id], onDelete: SetNull)

  @@index([transactionId])
  @@index([provider])
  @@index([providerTransactionId])
  @@index([status])
  @@map("external_payments")
}

model PaymentTransaction {
  id                 Int      @id @default(autoincrement())
  gateway            String   @db.VarChar(100)
  transactionDate    DateTime @default(now())
  accountNumber      String?  @db.VarChar(100)
  subAccount         String?  @db.VarChar(250)
  amountIn           Int      @default(0)
  amountOut          Int      @default(0)
  accumulated        Int      @default(0)
  code               String?  @db.VarChar(250)
  transactionContent String?  @db.Text
  referenceNumber    String?  @db.VarChar(255)
  body               String?  @db.Text

  createdAt DateTime @default(now())
}

model Invoice {
  id            String        @id @default(uuid()) @db.Uuid
  sessionId     Int           @map("session_id") // sessionId tá»« Driver/Charging Service
  userId        String        @map("user_id") @db.Uuid
  walletId      String        @map("wallet_id") @db.Uuid
  transactionId String?       @unique @map("transaction_id") @db.Uuid
  amountBigint  BigInt        @map("amount_bigint")
  currency      String        @default("VND") @db.VarChar(3)
  status        InvoiceStatus @default(PENDING)
  description   String?       @db.Text
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  // Relations
  wallet      Wallet       @relation(fields: [walletId], references: [id], onDelete: Cascade)
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([userId])
  @@index([walletId])
  @@index([status])
  @@map("invoices")
}

// ============================================
// *** ENUM
// ============================================
enum RequestStatus {
  PENDING
  PROCESSING
  APPROVED
  REJECTED
}

enum WalletType {
  PERSONAL
  BUSINESS
}

enum WalletStatus {
  PENDING
  ACTIVE
  SUSPENDED
  CLOSED
}

enum TransactionType {
  TOPUP
  WITHDRAWAL
  PAYMENT
  REFUND
  P2P_TRANSFER_IN
  P2P_TRANSFER_OUT
  ADJUSTMENT
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum IdempotencyStatus {
  PROCESSING
  COMPLETED
  FAILED
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
}

enum EntryType {
  DEBIT
  CREDIT
}

enum IdType {
  NATIONAL_ID
  PASSPORT
  DRIVER_LICENSE
}

enum KycStatus {
  PENDING
  REVIEWING
  APPROVED
  REJECTED
}

enum PaymentMethod {
  BANK_TRANSFER
  CARD
  QR_CODE
  ATM
}

enum BankVerifyStatus {
  PENDING
  VERIFIED
  FAILED
}
